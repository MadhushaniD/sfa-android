<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmed.sfa">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <supports-screens android:requiresSmallestWidthDp="600" />

        <activity android:name=".Activities.supportactivities.CheckIn" />
        <activity
            android:name=".Activities.AddExtraCustomer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AndroidDatabaseManager"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.AddCustomer"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.DisplayProductTableActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.Home"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.StockView"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.PendingCustomer"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activities.ServiceTest"></activity>
        <activity
            android:name=".Activities.InitialLogin"
            android:label="@string/title_activity_login" />

        <service
            android:name=".service.SyncService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Activities.ManualSync">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Login"></activity>
    </application>

</manifest>