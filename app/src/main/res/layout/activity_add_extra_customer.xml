<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTop"

    android:fitsSystemWindows="true">

    <!--include
        layout="@layout/app_bar_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" /-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_extra_customer"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context=".activities.AddExtraCustomer">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_addextracutomer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"

                android:gravity="right"
                android:id="@+id/textView2"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/spinner_area_ec"
                android:background="@android:drawable/btn_dropdown"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Town"

                android:gravity="right"
                android:id="@+id/textView3"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_town_ec"
                android:layout_row="2"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown" />

            <SearchView
                android:layout_width="wrap_content"
                android:id="@+id/search_txt_customer_ec"
                android:queryHint="Search"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </SearchView>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/table_add_extra_customer">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#92C94a"

                    android:layout_weight="0" >
<!--color:#92C94a,#2c8e52-->
                    <TextView
                        android:text=""
                        android:layout_gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#92C94a"
                    android:layout_weight="2"
                    android:paddingTop="10dp">

                    <TextView
                        android:text="CustomerName"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:textColor="#fff"

                        android:textAlignment="center"
                        android:background="#92C94a"
                        android:paddingBottom="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#92C94a"
                    android:layout_weight="2"
                    android:paddingTop="10dp">

                    <TextView
                        android:text="Address"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:paddingBottom="10dp"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#92C94a"
                    android:layout_weight="1"
                    android:paddingTop="10dp">

                    <TextView
                        android:text="Town"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#fff"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#92C94a"
                    android:layout_weight="1"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:text="telephone No" />

                </LinearLayout>


            </TableRow>
            <!--ListView
                android:id="@+id/add_extra_customer_listview"
                android:layout_width="match_parent"
                android:shrinkColumns="*"
                android:layout_height="0dp" /-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="375dp">


                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/linear_layout_add_ec_data_row">

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add to Itinerary"
                    android:layout_marginTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:id="@+id/btn_add_itineraray"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:background="@color/bg"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </TableLayout>


    </LinearLayout>

</RelativeLayout>

<android.support.design.widget.NavigationView
android:id="@+id/nav_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:fitsSystemWindows="true"
app:headerLayout="@layout/nav_header_navigation_drawer"
app:menu="@menu/activity_navigation_drawer_drawer" />


</android.support.v4.widget.DrawerLayout>