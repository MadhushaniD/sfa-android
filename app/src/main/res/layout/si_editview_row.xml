<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="@drawable/backshadow"
    android:textAlignment="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:backgroundTint="@android:color/holo_blue_light"

    android:backgroundTintMode="src_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/code_e"
        android:text="test1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="0dp" android:layout_weight="3" android:layout_height="match_parent">
        <Button
            android:id="@+id/si_row_add_btn"
            android:text="Add"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/product_e"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/batch_e"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/expiry_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/unit_price_e"
        android:layout_width="0dp"
        android:inputType="numberDecimal"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/stock_e"
        android:layout_width="0dp"
        android:inputType="number"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/shelf_e"
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/request_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/order_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/free_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/dsc_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/line_val_e"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</TableRow>
