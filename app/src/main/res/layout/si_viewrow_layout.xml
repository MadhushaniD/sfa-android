<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="@drawable/backshadow"
    android:textAlignment="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:backgroundTint="@android:color/holo_blue_light"

    android:backgroundTintMode="src_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/code_v_si"
        android:text="test1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/product_v_si"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/batch_v_si"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/expiry_v_si"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/unit_price_v_si"
        android:layout_width="0dp"

        android:layout_weight="1"

        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/stock_v_si"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/shelf_v_si"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/request_v_si"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/order_v_si"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/free_v_si"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/dsc_v_asi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/line_val_v_si"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</TableRow>
